<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Property name -->
    <TextView
        android:id="@+id/propertyNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Property rating -->
    <TextView
        android:id="@+id/propertyRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/propertyNameTextView"
        android:layout_marginTop="8dp"
        android:text="Rating: 0"
        android:textSize="14sp" />

    <!-- Add more views as needed to display additional property information -->

</RelativeLayout>
